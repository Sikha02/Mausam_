    <script>
         function handleLogout() {
    fetch('/logout', { // Update this path if needed
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      credentials: 'include' // Include cookies if using session-based authentication
    })
    .then(response => {
      if (response.ok) {
        window.location.href = '/'; // Redirect to home page
      } else {
        console.error('Logout failed');
      }
    })
    .catch(error => {
      console.error('Error during logout:', error);
    });
  }

        // JavaScript to handle form submission, show custom alert, and reset page
        document.getElementById('requestForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent the form from submitting normally
            showAlert('Your request has been submitted'); // Show custom alert

            // After the alert is dismissed, reload the page
            setTimeout(function() {
                location.reload(); // Reloads the page
            }, 2000); // Delay to give time for the user to see the alert
        });

        // Function to show the custom alert
        function showAlert(message) {
            const alertBox = document.getElementById('customAlert');
            const alertMessage = document.getElementById('alertMessage');
            alertMessage.textContent = message;
            alertBox.style.display = 'flex';
        }

        // Function to close the custom alert
        function closeAlert() {
            document.getElementById('customAlert').style.display = 'none';
        }

        // Function to open the form (if needed)
        function openForm() {
            document.getElementById('myForm').style.display = 'flex';
        }

        // Function to close the form
        function closeForm() {
            document.getElementById('myForm').style.display = 'none';
        }
    </script>
